import java.util.Scanner;
/**
 * 进制的转换
 * @author pjx
 *
 */
public class NumberSystemConvert {
	
	/**
	 * 二进制转换
	 * @param n  传入的十进制
	 */
	static void Binary(int n) {
		int[] a = new int[1000];
		int i = 0;
		
		for(i=0;n>=1;i++,n=n/2) {
			if(n%2==0) {
				a[i] = 0;
			}
			else {
				a[i] = 1;
			}

		}
		System.out.print("二进制:");
		for(i=i-1;i>=0;i--) {
			System.out.print(a[i]);
		}
		

	}
	
	
	public static void main(String[] args) {
		
		int num = 0;
		Scanner scanner = new Scanner(System.in);
		
		System.out.print("输入一个十进制:");
		num = scanner.nextInt();
		
		Binary(num);
		
		
		System.out.println("\n#######################");
        int decimal;
        String Sbinary;
        int  binary;
 
        decimal = 100;
        Sbinary = Integer.toBinaryString(decimal);
        System.out.println(Sbinary);
        binary  = Integer.parseInt(Sbinary);
        System.out.printf("二进制:%d",binary);

		
	}

}
