package com.decorate;

public class DecorateTest02 {

}

//抽象组件
interface Person{
	String getName(); 
	int getAge();
	
}

//具体组件
class Athletes implements Person{
	private String name;
	private int age;
	@Override
	public String getName() {
		return this.name;
	}

	@Override
	public int getAge() {
		return this.age;
	}
	
}
//抽象装饰类
abstract class Skills implements Person{
	Person p;
	
	public Skills(Person p) {
		super();
		this.p = p;
	}

	@Override
	public String getName() {
		return this.p.getName();
	}

	@Override
	public int getAge() {
		// TODO Auto-generated method stub
		return this.p.getAge();
	}
	
}
